@model IEnumerable<AppView.BorrowWSReference.BorrowDTO>

@{
    ViewBag.Title = "ReportBorrowedMedia";
    var BorrowedMediaList = ViewData["BorrowList"] as AppView.BorrowWSReference.BorrowDTO[];
}

<h2>ReportBorrowedMedia</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BorrowDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActualReturnDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in BorrowedMediaList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BorrowDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActualReturnDate)
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Back to Media List", "Index", "MediaView")
</div>
