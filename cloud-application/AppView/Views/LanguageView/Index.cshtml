@model IEnumerable<AppView.Models.LanguageViewDTO>

@{
    ViewBag.Title = "Language";
    var LanguageList = ViewData["LanguageList"] as List<AppView.Models.LanguageViewDTO>;
}

<h2>Language</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LanguageName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in LanguageList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LanguageName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { Id = item.LID, LanguageName = item.LanguageName }) |
                @Html.ActionLink("Delete", "Delete", new { Id = item.LID }, new { onclick = "return confirm('Are you sure you wish to delete this Language?');" })
            </td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("Back to Media List", "Index", "MediaView")
</div>
